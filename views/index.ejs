<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="/public/style.css"> <!-- Correct link to your style.css file -->
</head>
<body>
    <div class="container">
        <h1>Todo List</h1>
        <form id="addTodoForm" action="/" method="post">
            <input type="text" id="todoTask" name="todoTask" placeholder="New Todo" required>
            <button type="submit">Add Todo</button>
        </form>
        <table>
            <thead>
                <tr>
                    <th>Task</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="todoList">
                <% data.forEach(todo => { %>
                    <tr>
                        <td><%= todo.todoTask %></td>
                        <td>
                            <form action="/delete" method="post">
                                <input type="hidden" name="todoId" value="<%= todo.todoId %>">
                                <button type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script src="/public/script.js"></script> <!-- Correct link to your script.js file -->
</body>
</html>
